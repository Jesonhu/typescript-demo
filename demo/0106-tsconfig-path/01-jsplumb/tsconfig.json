{
  "compilerOptions": {
    "module": "umd",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "strictNullChecks": false,
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "jsplumb": ["node_modules/jsplumb/index.d.ts"]
    },
    "lib":[
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dis"
  ]
}
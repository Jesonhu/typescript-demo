{
  "compilerOptions": {
    /* Basic Options */
    "module": "es2015",
    "target": "es5",        
    "noImplicitAny": true,
    "removeComments": true,     
    "declaration": true,                  
    "outDir": "./dist",                       
    "declarationDir": "dist/@types"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}